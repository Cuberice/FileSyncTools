@using SyncMobile.Utils
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>Media Synchronization</title>
        <meta name="viewport" content="width=device-width" />
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        @Styles.Render("~/Content/mobileCss", "~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <div data-role="page" data-theme="b">
            <div data-role="header">
                @if (IsSectionDefined("Header")) 
                {
                    <div class="ui-bar ui-bar-a">
                        @Html.ActionLink("Refresh Files", "RefreshData", "Home", "data-inline=\"true\"  data-icon=\"refresh\" ")
                        @Html.ActionLink("Test", "Test", "Home", "data-inline=\"true\"  data-icon=\"check\" ")
                        @Html.ActionLink("Log in", "Login", "Account", "data-inline=\"true\"  data-icon=\"alert\" class=\"ui-btn-right\" ")
                    </div>

                    @RenderSection("Header")
                } 
                else 
                {
                    @Html.Partial("_LoginPartial")
                }
            </div>
            <div data-role="content">
                @RenderBody()
            </div>
        </div>

        @Scripts.Render("~/bundles/jquery")
        <script>
            $(document).on("mobileinit", function () {
                $.mobile.ajaxEnabled = false;
            });
        </script>
        @Scripts.Render("~/bundles/jquerymobile")
        @Scripts.Render("~/bundles/myscripts")
        @RenderSection("scripts", false)
    </body>
</html>
